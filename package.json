{
  "name": "eliza-plugin-claude-code",
  "version": "0.3.0",
  "description": "Use Claude Code CLI as a model provider in ElizaOS agents",
  "author": "Ondrej Vostal <ondrej@vostal.net>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kronael/eliza-plugin-claude-code"
  },
    "scripts": {
    "build": "bun build src/index.ts --outdir dist --format esm --external @elizaos/core --sourcemap=external && tsc --emitDeclarationOnly",
    "dev": "bun build src/index.ts --outdir dist --format esm --external @elizaos/core --sourcemap=external --watch",
    "clean": "rm -rf dist",
    "prepare": "bun run build"
  },
  "peerDependencies": {
    "@elizaos/core": ">=0.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "elizaos",
    "plugin",
    "claude",
    "claude-code",
    "model-provider",
    "ai-agent"
  ]
}
